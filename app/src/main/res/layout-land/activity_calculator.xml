<?xml version="1.0" encoding="utf-8"?>
<layout >

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout android:id="@+id/activity_main"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            tools:context=".Calculator">

            <TextView
                android:id="@+id/finalTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="    "
                android:textSize="30sp" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="212dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_toRightOf="@+id/finalTextView"
                android:focusable="false"
                android:lines="2"
                android:text="                     "
                android:textColor="@color/colorblack"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/operator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/finalTextView"
                android:text="    "
                android:textSize="30sp" />

            <EditText
                android:id="@+id/editText"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="212dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView"
                android:layout_marginBottom="44dp"
                android:layout_marginLeft="30dp"
                android:layout_toRightOf="@+id/operator"
                android:background="#FFFFFF"
                android:enabled="false"
                android:focusable="false"
                android:lines="1"
                android:maxLines="1"
                android:textAlignment="textStart"
                android:textColor="@color/colorblack"
                android:textSize="30sp" />

            <Button
                android:id="@+id/buttonSeven"
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_below="@+id/editText"
                android:background="@drawable/ic_buttton_background"
                android:text="7"
                android:textSize="30sp" />

            <Button
                android:id="@+id/buttonEight"
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:layout_marginRight="20dp"
                android:layout_below="@+id/editText"
                android:layout_toRightOf="@+id/buttonSeven"
                android:background="@drawable/ic_buttton_background"
                android:text="8"
                android:textSize="30sp" />

            <Button
                android:id="@+id/buttonNine"
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:layout_marginRight="20dp"
                android:layout_below="@+id/editText"
                android:layout_toRightOf="@+id/buttonEight"
                android:background="@drawable/ic_buttton_background"
                android:text="9"
                android:textSize="30sp" />

            <Button
                android:id="@+id/buttonFour"
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_below="@+id/buttonSeven"
                android:background="@drawable/ic_buttton_background"
                android:text="4"
                android:textSize="30sp" />

            <Button
                android:id="@+id/buttonFive"
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:layout_below="@+id/buttonEight"
                android:layout_toRightOf="@+id/buttonFour"
                android:layout_marginRight="20dp"
                android:background="@drawable/ic_buttton_background"
                android:text="5"
                android:textSize="30sp" />

            <Button
                android:id="@+id/buttonSix"
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:layout_below="@+id/buttonNine"
                android:layout_toRightOf="@+id/buttonFive"
                android:layout_marginRight="20dp"
                android:background="@drawable/ic_buttton_background"
                android:text="6"
                android:textSize="30sp" />

            <Button
                android:id="@+id/buttonOne"
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_below="@+id/buttonFour"
                android:background="@drawable/ic_buttton_background"
                android:text="1"
                android:textSize="30sp" />

            <Button
                android:id="@+id/buttonTwo"
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:layout_below="@+id/buttonFive"
                android:layout_marginRight="20dp"
                android:layout_toRightOf="@+id/buttonOne"
                android:background="@drawable/ic_buttton_background"
                android:text="2"
                android:textSize="30sp" />

            <Button
                android:id="@+id/buttonThree"
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:layout_below="@+id/buttonSix"
                android:layout_toRightOf="@+id/buttonTwo"
                android:layout_marginRight="20dp"
                android:background="@drawable/ic_buttton_background"
                android:text="3"
                android:textSize="30sp" />

            <Button
                android:id="@+id/buttonDot"
                android:layout_width="90dp"
                android:layout_height="68dp"
                android:layout_below="@+id/buttonOne"
                android:background="@color/colorpink"
                android:text="."
                android:layout_marginRight="20dp"
                android:textColor="@color/color_white"
                android:textSize="30sp" />

            <Button
                android:id="@+id/buttonZero"
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:layout_below="@+id/buttonTwo"
                android:layout_toRightOf="@+id/buttonDot"
                android:background="@drawable/ic_buttton_background"
                android:text="0"
                android:layout_marginRight="20dp"
                android:textSize="30sp" />

            <Button
                android:id="@+id/buttonEqual"
                android:layout_width="88dp"
                android:layout_height="68dp"
                android:layout_below="@+id/buttonThree"
                android:layout_toRightOf="@+id/buttonZero"
                android:background="@color/colorpink"
                android:enabled="true"
                android:padding="10dp"
                android:text="="
                android:textColor="@color/color_white"
                android:textSize="30sp" />

            <Button
                android:id="@+id/buttonDivision"
                android:layout_width="76dp"
                android:layout_height="68dp"
                android:layout_alignParentEnd="false"
                android:layout_alignTop="@+id/buttonNine"
                android:layout_below="@+id/editText"
                android:layout_toRightOf="@+id/buttonNine"
                android:background="@color/colorpink"
                android:paddingBottom="20dp"
                android:paddingTop="20dp"
                android:text="/"
                android:textColor="@color/color_white"
                android:textSize="30sp" />

            <Button
                android:id="@+id/buttonMul"
                android:layout_width="78dp"
                android:layout_height="68dp"
                android:layout_alignTop="@+id/buttonSix"
                android:layout_alignParentEnd="false"
                android:layout_toRightOf="@+id/buttonSix"
                android:background="@color/colorpink"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="*"
                android:textColor="@color/color_white"
                android:textSize="30sp" />

            <Button
                android:id="@+id/buttonSub"
                android:layout_width="78dp"
                android:layout_height="68dp"
                android:layout_alignTop="@+id/buttonThree"
                android:layout_below="@+id/buttonMul"
                android:layout_toRightOf="@+id/buttonThree"
                android:background="@color/colorpink"
                android:layout_alignParentEnd="false"
                android:paddingBottom="20dp"
                android:paddingTop="20dp"
                android:text="-"
                android:textColor="@color/color_white"
                android:textSize="30sp" />
            <Button
                android:id="@+id/buttonAdd"
                android:layout_width="78dp"
                android:layout_height="68dp"
                android:layout_alignTop="@+id/buttonEqual"
                android:layout_below="@+id/buttonSub"
                android:layout_toRightOf="@+id/buttonEqual"
                android:background="@color/colorpink"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="+"
                android:textColor="@color/color_white"
                android:textSize="30sp" />

            <Button
                android:id="@+id/buttonsqrt"
                android:layout_width="88dp"
                android:textColor="@color/color_white"
                android:layout_height="65dp"
                android:layout_below="@+id/buttonDot"
                android:layout_alignParentStart="true"
                android:padding="10dp"
                android:background="@color/colorpink"
                android:text="âˆš"
                android:textSize="30sp" />

            <Button
                android:id="@+id/buttonPersentage"
                android:layout_width="78dp"
                android:textColor="@color/color_white"
                android:layout_height="65dp"
                android:layout_below="@+id/buttonZero"
                android:padding="10dp"
                android:layout_toRightOf="@+id/buttonsqrt"
                android:background="@color/colorpink"
                android:text="%"
                android:textSize="30sp" />

            <Button
                android:id="@+id/buttonBack"
                android:layout_width="98dp"
                android:layout_height="65dp"
                android:layout_below="@+id/buttonEqual"
                android:layout_toRightOf="@+id/buttonPersentage"
                android:background="@color/colorpink"
                android:text="@string/back"
                android:padding="14dp"
                android:textColor="@color/color_white"
                android:textSize="20sp" />

            <Button
                android:id="@+id/buttonClear"
                android:layout_width="68dp"
                android:padding="10dp"
                android:layout_height="65dp"
                android:layout_alignRight="@+id/buttonAdd"
                android:layout_below="@+id/buttonAdd"
                android:layout_toRightOf="@+id/buttonBack"
                android:background="@color/colorpink"
                android:text="AC"
                android:textColor="@color/colorblack"
                android:textSize="20sp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/buttonsqrt"
                android:background="#FFFFFF"
                android:text="" />


        </RelativeLayout>
    </ScrollView>

</layout>
